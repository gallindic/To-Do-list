<div class="container mt-3">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div>
                <h5 class="text-center"><i class="fa fa-square-o" aria-hidden="true"></i><span class="ml-2"></span>To-Do Lists</h5>
                <% for @l in @lists %>
                    <% if !@l.finished %>
                        <div class="card col-12 mt-3 p-3 card-no-border card-dark-border">
                          <div class="card-block tasks">
                              <div class="float-left">
                                  <a href=""><%= @l.name %></a>
                              </div>
                              <div class="float-right">
                                  <span class="mx-1 card-icon">
                                      <a href=""><i class="fa fa-pencil"></i></a>
                                  </span>
                                  <span class="mx-1 card-icon">
                                      <a href=""><i class="fa fa-trash-o"></i></a>
                                  </span>
                              </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div>
                <h5 class="text-center mt-4"><i class="fa fa-check-square-o" aria-hidden="true"></i><span class="ml-2"></span>Completed</h5>
                <% for @l in @lists %>
                    <% if @l.finished %>
                        <div class="card col-12 mt-3 p-3 card-no-border card-dark-border">
                          <div class="card-block tasks">
                              <div class="float-left">
                                  <%= @l.name %>
                              </div>
                              <div class="float-right">
                                  <span class="mx-1 card-icon">
                                      <a href=""><i class="fa fa-trash-o"></i></a>
                                  </span>
                              </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>

