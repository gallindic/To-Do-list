<div class="container mt-3">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <h3 class="text-center"><%= @list.name %></h3>
            <div class="mt-5">
                <div class="row">
                    <div class="col-3"></div>
                    <div class="col-6 p-3">
                        <h5 class="text-center">Unfinished Tasks</h5>
                        <% for @t in @tasks %>
                            <% if !@t.finished %>
                                <div class="card col-12 mt-3 p-3 card-no-border card-dark-border">
                                  <div class="card-block tasks">
                                      <div>
                                          <% if @t.image.present? %>
                                            <%= image_tag @t.image_url.to_s, class: "medium-input" %>
                                          <% end %>
                                      </div>
                                      <div class="float-left">
                                        <span class="task-content"><%= @t.content %></span>
                                      </div>
                                      <div class="float-right">
                                          <span class="mx-1 card-icon">
                                              <%= link_to fa_icon("check-circle"), edit_task_path(@t.id) %>
                                          </span>
                                          <span class="mx-1 card-icon">
                                              <%= link_to fa_icon("trash-o"), @t, :data => {:confirm => 'Are you sure?'}, :method => 'delete' %>
                                          </span>
                                      </div>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                        <%= link_to "Add Task", new_task_path(:list_id => @list.id), class: "btn btn-primary mt-3" %>
                        <h5 class="text-center mt-4">Finished Tasks</h5>
                        <% for @t in @tasks %>
                            <% if @t.finished %>
                                <div class="card col-12 mt-3 p-3 card-no-border card-dark-border">
                                  <div class="card-block tasks">
                                      <div>
                                          <% if @t.image.present? %>
                                            <%= image_tag @t.image_url.to_s, class: "medium-input" %>
                                          <% end %>
                                      </div>
                                      <div class="float-left">
                                          <span class="task-content"><%= @t.content %></span>
                                      </div>
                                      <div class="float-right">
                                          <span class="mx-1 card-icon">
                                              <%= link_to fa_icon("trash-o"), @t, :data => {:confirm => 'Are you sure?'}, :method => 'delete' %>
                                          </span>
                                      </div>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>
</div>